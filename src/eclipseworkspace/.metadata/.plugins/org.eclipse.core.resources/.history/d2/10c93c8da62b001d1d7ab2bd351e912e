/*-----------------------------------------------------------------------------------------------------------------------	
	Integer sınıfının (aslında tüm tamsayıya ilişkin sarmalayan sınıfların) sayı sistemi parametreli parseXXX metotları
	vardır. Aşağıdaki örnekte Integer sınıfının radix parseInt metodu kullanılmıştır
-----------------------------------------------------------------------------------------------------------------------*/
package csd;


class App {
	public static void main(String [] args)
	{	
		java.util.Scanner kb = new java.util.Scanner(System.in);
		System.out.print("Bir sayı giriniz:");
		String str = kb.nextLine();
		
		System.out.print("Sayı sistemini giriniz:");
		int radix = Integer.parseInt(kb.nextLine());
		
		int a  = Integer.parseInt(str, radix);
		
		String message = String.format("a = %d%n", a);
		
		//...
		
		System.out.println(message);		
	}
}

