/*-----------------------------------------------------------------------------------------------------------------------	
	Boolean sınıfının parseBoolean "case insensitive" olarak true yazısı için true değerine, diğer tüm yazılar için
	false değerine geri döner
-----------------------------------------------------------------------------------------------------------------------*/
package csd;


class App {
	public static void main(String [] args)
	{	
		java.util.Scanner kb = new java.util.Scanner(System.in);
		System.out.print("Bir sayı girinmiz::");
		String str = kb.nextLine();
		boolean flag = Boolean.parseBoolean(str);
		
		System.out.printf("flag = %b%n", flag);
	}
}

