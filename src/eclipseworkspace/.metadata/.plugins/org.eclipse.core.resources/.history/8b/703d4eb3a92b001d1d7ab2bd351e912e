/*-----------------------------------------------------------------------------------------------------------------------	
	Benzer şekilde String sınıfı 
-----------------------------------------------------------------------------------------------------------------------*/
package csd;

class App {
	public static void  main(String [] args)
	{
		java.util.Scanner kb = new java.util.Scanner(System.in);
		System.out.print("Şehir ismini giriniz:");
		String name = kb.nextLine();
		
		switch (name.toLowerCase()) {
		case "istanbul", "bakıkesir", "bursa", "tekirdağ" -> System.out.printf("%s Marmara Bölgesindedir%n", name);			
		case "zonguldak", "sinop", "bolu" -> System.out.printf("%s Batı Karadeniz Bölgesindedir%n", name);			
		default -> System.out.println("Geçersiz şehir ismi");
		}
		
		System.out.println("Tekrar yapıyor musunuz?");
	}
}

